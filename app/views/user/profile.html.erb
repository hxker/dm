<div class="floor" id="user">
  <div id="nav" class="nav-v2 container-layer">
    <div class="container">
      <a href="/" class="logo-orange col-l"></a>

      <div class="nav-menu col-r">
        <ul class="items">
          <li class="item">
            <a href="/">首页</a>
          </li>
          <li class="item">
            <a href="<%= introduction_index_url %>">比赛</a>
          </li>
          <li class="item">
            <a href="">新闻</a>
          </li>
          <li class="item">
            <a href="">论坛</a>
          </li>
          <li class="item">
            <a href="">关于</a>
          </li>
          <li class="item">
            <a href="">联系</a>
          </li>
        </ul>
        <div class="login-menu col-r">
          <% if user_signed_in? %>
              <%= current_user.nickname %>
              <%= link_to destroy_user_session_path, method: :delete, data: {confirm: '确认退出登录吗?'}, title: '退出登录', :class => '' do %>
                  退出
              <% end %>
          <% else %>
              <%= link_to '注册', new_user_registration_path, :class => 'robodou-btn btn-register' %>
              <%= link_to '登录', new_user_session_path, :class => 'robodou-btn btn-login' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="container-content">
    <div id="user-info">
      <div class="menu">
        <div class="menu-item">
          <%= simple_form_for(current_user, html: {id: 'form_change_avatar', multipart: true}, url: user_update_avatar_path, method: :post) do |f| %>
              <!--<div class="avatar">-->
              <%= image_tag(current_user.avatar_url(:middle), class: 'avatar-img') %>
              <!--<span class="username">Vivian</span> &lt;!&ndash;昵称&ndash;&gt;-->
              <%= f.file_field :avatar %>
              <%= f.input :nickname %>
              <%= f.submit class: 'btn btn-primary', value: '更新个人信息' %>
              <!--</div>-->
          <% end %>
        </div>
        <div class="menu-item active">
          <a class="t-18">我的资料</a>
        </div>
        <div class="menu-item">
          <a class="t-18">我的比赛</a>
        </div>
      </div>
      <div class="content">
        <%= simple_form_for(@user_profile, html: {id: 'form_change_profile', multipart: true}, url: user_profile_path, method: :post) do |f| %>
            <div class="signature">
              <div class="input-row">
                <label class="t-16 signature-label" for="user[signature]">签名：</label>
                    <textarea class="t-14 signature-input" name="user_profile[autograph]"
                              id="user_profile[autograph]"><%= @user_profile.autograph %></textarea>
              </div>
            </div>
            <div class="secret-info">
              <!--<p class="text-right">*以下默认为不公开信息，只做资料备份</p>-->

              <div class="input-row">
                <label class="user-label t-16">姓名：</label>
                <%= f.input :username %>
              </div>
              <div class="input-row">
                <label class="user-label t-16">性别：</label>
                <%= f.input :gender, collection: UserProfile::GENDER.map { |key, val| [t('gender.'+key.to_s), val] } %>
              </div>
              <div class="input-row">
                <label class="user-label t-16">生日：</label>
                <%= f.input :birthday, as: :date, html5: true %>
              </div>

              <div class="input-row">
                <label class="user-label t-16">学校：</label>
                <%= f.input :school %>
              </div>
              <div class="input-row">
                <label class="user-label t-16">年级：</label>
                <%= f.input :grade %>
              </div>
            </div>
            <%= f.submit class: 'btn-save-user-info', value: '保存修改' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
</div>

