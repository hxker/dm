<div class="floor" id="user">
  <div id="nav" class="nav-v2 container-layer">
    <%= render 'layouts/nav_menu' %>
  </div>
  <div class="container-content">
    <div id="user-info">
      <div class="menu">
        <div class="menu-item clearfix">
          <%= simple_form_for(current_user, html: {id: 'form_change_avatar', multipart: true}, url: user_update_avatar_path, method: :post) do |f| %>
              <div class="avatar">
                <%= image_tag(current_user.avatar_url(:middle), class: 'avatar-img') %>
              </div>
              <label class="edit-avatar" for="user_avatar">修改头像</label>

              <div class="username">
                <div class="edit" data-edit="text" data-name="user[nickname]" title="点击编辑">
                  <%= current_user.nickname %>
                </div>
                <input type="hidden" name="user[nickname]" value="<%= current_user.nickname %>"/>
              </div>
              <div class="clearfix"></div>
              <div class="edit-plus">
                <%= f.file_field :avatar %>
                <%= f.submit class: 'btn-user-update', value: '更新个人信息' %>
              </div>
          <% end %>
        </div>
        <%= render 'user/menu' %>
      </div>
      <div class="content">
        <%= simple_form_for(@user_profile, html: {id: 'form_change_profile', multipart: true}, url: user_profile_path, method: :post) do |f| %>
            <div class="signature">
              <div class="input-row">
                <label class="t-16 signature-label" for="user[signature]">签名：</label>
                    <textarea class="t-14 signature-input" name="user_profile[autograph]"
                              id="user_profile[autograph]"><%= @user_profile.autograph %></textarea>
              </div>
            </div>
            <div class="secret-info">
              <!--<p class="text-right">*以下默认为不公开信息，只做资料备份</p>-->

              <div class="input-row">
                <label class="user-label t-16">姓名：</label>
                <%= f.input :username %>
              </div>
              <div class="input-row">
                <label class="user-label t-16">性别：</label>
                <!--<%= f.input :gender, collection: UserProfile::GENDER.map { |key, val| [t('gender.'+key.to_s), val] } %>-->

                <label class="gender-radio"><input name="user_profile[gender]" value="1" type="radio" <%= 'checked="checked"' if @user_profile.gender==1 %> />男</label>
                <label class="gender-radio"><input name="user_profile[gender]" value="2" type="radio" <%= 'checked="checked"' if @user_profile.gender==2 %> />女</label>

              </div>
              <div class="input-row">
                <label class="user-label t-16">年龄：</label>
                <%= f.input :age %>
              </div>
              <div class="input-row">
                <label class="user-label t-16">学校：</label>
                <%= f.input :school %>
              </div>
              <div class="input-row" style="overflow: hidden">
                <div style="width: 230px;float: left;margin-right: 20px">
                  <label class="user-label t-16">年级：</label>
                  <%= f.input :grade, collection: {一年级: 1, 二年级: 2, 三年级: 3, 四年级: 4, 五年级: 5, 六年级: 6, 七年级: 7, 八年级: 8, 九年级: 9, }.map { |key, val| [key, val] } %>
                </div>
                <div style="width: 230px;float: left;">
                  <label class="user-label t-16">班级：</label>
                  <%= f.input :bj %>
                </div>
              </div>
            </div>
            <%= f.submit class: 'btn-save-user-info', value: '保存修改' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
</div>

