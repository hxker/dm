<div class="floor" id="register">
  <div id="nav" class="nav-v2 container-layer">
    <%= render 'layouts/nav_menu' %>
  </div>
  <div id="register-content" class="">
    <div class="passport">
      <div class="passport-title t-22 text-center">
        注册
      </div>
      <div class="passport-content">
        <%= simple_form_for(@sing_up, url: register_post_accounts_path, method: :post) do |f| %>
            <div class="t-14 text-right pull-down-10">没有手机？请用<a class="blue" href="/users/sign_up">邮箱</a>注册<br/>
            </div>
            <%= f.input :mobile, as: :tel, placeholder: '请输入手机号', wrapper_html: {class: ''} %>
            <div class="field form-group">
              <label for="captcha" class="control-label">校验码：</label>

              <div class="clearfix"></div>
              <p class="pull-right" id="captcha-plus"><%= captcha_tag %> <span class="btn refresh-captcha">换一张</span>
              </p>

              <%= text_field_tag :captcha %>
            </div>
            <div>
              <%= f.input :mobile_code, as: :tel, placeholder: '请输入验证码' %>
              <button type="button" data-key="sing_up" data-type="REGISTER" id="btn_send_mobile_code" class="btn-get-code">获取验证码</button>
            </div>
            <%= f.input :nickname, as: :tel, placeholder: '请输入昵称', wrapper_html: {class: ''} %>
            <%= f.input :password, placeholder: '请设置您的密码 (6-20位)', wrapper_html: {class: ''} %>

            <div class="form-group form-group-lg">
              <%= f.submit class: 'btn-confirm-register', value: '立即注册' %>
            </div>
        <% end %>
        <p class="clearfix text-right">
          <a href="<%= new_user_session_path %>">使用已有账户登录</a>
        </p>
      </div>
    </div>
  </div>
  <div id="footer" class="container-layer">
    <div class="container">
      <div class="contact col-l">
        <div class="contact-item">
          <i class="fa fa-qq"></i>
          1234567
        </div>
        <div class="contact-item">
          <i class="fa fa-weixin"></i>
          987654321
        </div>
        <div class="contact-item">
          <i class="fa fa-phone"></i>
          0210-112663536
        </div>
      </div>
      <div class="address col-r">
        <i class="fa fa-map-marker"></i>
        上海市 徐汇区 钦州北路68号B3栋101
      </div>
    </div>
  </div>
</div>